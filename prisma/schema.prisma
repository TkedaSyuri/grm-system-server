
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Floor {
  id          Int    @id @default(autoincrement())
  floorNumber Int @unique
  rooms        Room[]
}

model Room {
  id         Int    @id @default(autoincrement())
  roomNumber String
  roomState  String @default("vacant")
  isConsecutiveNight Boolean @default(false)
  floor      Floor  @relation(fields: [floorId], references: [floorNumber])
  floorId     Int
}

model Staff {
  staffId   Int    @id @default(autoincrement())
  staffName String
  email      String @unique
  password   String
}

model Task {
  id Int @id @default(autoincrement())
  task String
  isCompleted Boolean @default(false)
}

model Chat {
  id Int @id @default(autoincrement())
  message String
  createdAt DateTime @default(now()) 
  sender String @default("housekeeper")
  floorNumber String?
}